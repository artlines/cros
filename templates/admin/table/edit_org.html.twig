{% extends 'admin.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Управление компанией {{ org }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
        <div id="editor"></div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/admin.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/admin.js') }}"></script>
    <script src="{{ asset('assets/js/ckeditor/ckeditor.js') }}"></script>
    <script>
        $(function () {
            $('*[data-helper]').each(function () {
                $(this).after('<span class="text-muted">' + $(this).attr('data-helper') + '</span>');
            });
        });
    </script>
{% endblock %}