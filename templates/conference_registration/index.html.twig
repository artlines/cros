{% extends 'base.html.twig' %}


{% block title %}Hello !{% endblock %}

{% block body %}



    {#{{ form(form) }}#}
    {{ form_start(form) }}
    {# ... #}
    {% for child in form -%}
        {% if child.vars.prototype is defined %}
            {#{{ dump(child.vars.prototype) }}#}
            <ul id="email-fields-list"
                data-prototype="{{ form_widget(child.vars.prototype)|e }}"
                data-widget-tags="{{ '<li></li>'|e }}">
                {% for memberField in form.member %}
                    <li>
                        {{ form_errors(memberField) }}
                        {{ form_widget(memberField) }}
                    </li>
                {% endfor %}
            </ul>
            <button type="button"
                    class="add-another-collection-widget"
                    data-list="#email-fields-list">Add another member</button>
        {% else %}
            {{- form_row(child) -}}
        {% endif %}
    {%- endfor -%}

    {# store the prototype on the data-prototype attribute #}


    {# ... #}
    {{ form_end(form) }}

{% endblock %}
