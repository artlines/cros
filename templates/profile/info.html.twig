{% extends 'base.html.twig' %}
{% block header_title %}Личный кабинет{% endblock %}

{% block page_image %}info_terms{% endblock %}

{% block body %}
    <h2>Редактирование информации о Компании </h2>
    <a href="{{ path('profile', {'page':'security'}) }}" class="btn u-btn-yellow cs-color-white cs-font-size-13 cs-px-10 cs-py-10 mb-0 cs-mt-15">Сменить пароль</a>

        {{ form_start(form) }}

        <div class="row">
            {{ form_row(form.name) }}
            {{ form_row(form.city) }}
        </div>
        <div class="row">
            {{ form_row(form.email) }}
            {{ form_row(form.username) }}
        </div>
        <div class="row">
            {{ form_row(form.inn) }}
            {{ form_row(form.kpp) }}
        </div>
        <div class="row">
            {{ form_row(form.requisites) }}
            {{ form_row(form.address) }}
        </div>
        <div class="row">
            {{ form_row(form.comment) }}
        </div>

        {{ form_row(form.save) }}

        {{ form_end(form) }}
        <span style="color: #a94442;">*</span> - поля обязательны к заполнению
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('form .row .form-group').addClass('col-sm-12 col-md-6');
        });

        $(function () {
            $('*[data-helper]').each(function () {
                $(this).after('<span class="text-muted cs-font-size-11">' + $(this).attr('data-helper') + '</span>');
            });

            //$('#form_name, #form_inn, #form_email').parent('.form-group').css('margin-right', '2%');
            //$('#form_name, #form_city, #form_inn, #form_kpp, #form_email').parent('.form-group').css('width', '49%').css('display', 'inline-block').css('vertical-align', 'top');

            {% if result is defined %}
            {% if result.element is defined %}
            var $input = $('#form_{{ result.element }}');
            $input.after('<span class="bg-error">{{ result.text }}</span><br>');
            $input.focus();
            {% endif %}
            {% endif %}
        });
    </script>
{% endblock %}