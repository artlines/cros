{% extends 'base.html.twig' %}

{% block title %}Конференция Российских Операторов Связи{% endblock %}

{% block header_title %}Вопросы и ответы{% endblock %}

{% block body %}
    {% if faq is empty %}
        <h3>Нет ответов</h3>
    {% else %}
        <div class="accordion" id="accordion" role="tablist">
            {% set first = 1 %}
            {% for answer in faq %}
                <div class="card cs-mb-10">
                    <div class="card-header" role="tab" id="heading_{{ answer.id }}">
                        <h5 class="mb-0">
                            <a class="collapse-header-link" data-toggle="collapse" data-target="#collapse_{{ answer.id }}"
                               aria-expanded="true" aria-controls="collapse_{{ answer.id }}" href="#collapse_{{ answer.id }}">
                                <p>{{ answer.question|raw }}</p>
                            </a>
                        </h5>
                    </div>
                    <div id="collapse_{{ answer.id }}" class="collapse" aria-labelledby="heading_{{ answer.id }}" data-parent="#accordion">
                        <div class="card-body">
                            {{ answer.answer|raw }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}

{% block stylesheets %}
{% endblock %}
