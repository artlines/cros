{% extends 'base.html.twig' %}

{% block title %}Конференция Российских Операторов Связи{% endblock %}

{% block header_title %}Архив{% endblock %}
{% block body %}
    {% if conferences is empty %}
        <h3>Нет истории</h3>
    {% else %}
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <ul class="nav nav-pills archive-nav row">
                    {% for conference in conferences|reverse %}
                        <li class="nav-item">
                            <a class="nav-link{% if conference.year == selectedyear %} active{% endif %}" href="{{ path('archive', {'year': conference.year}) }}">{{ conference.year }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </nav>
        <div class="col-lg-12">
            <h2>{{ info.title }}</h2>
            {{ info.content|raw }}
        </div>
    {% endif %}
{% endblock %}

{% block stylesheets %}
{% endblock %}
