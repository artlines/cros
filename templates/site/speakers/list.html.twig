{% extends 'base.html.twig' %}

{% block title %}Докладчики{% endblock %}

{% block header_title %}Докладчики{% endblock %}

{% block page_image %}info_terms{% endblock %}

{% block body %}
    <style>
        .topimg img{
            width: 100%;
        }
    </style>
    {% if list is empty %}
        <h3>Докладчики еще не добавлены</h3>
    {% else %}
        <section id="ourguests" class="cs-pt-30 cs-mb-100 cs-bg-img-layer-middle">
            <div class="container">
                <div class="align-self-center w-100 cs-mb-30">
                    <h2 class="text-uppercase cs-font-weight-700 cs-font-size-23 cs-mb-10 text-center">
                        Наши спикеры
                    </h2>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <div class="row centering-speaker{% if list|length > 4 %} justify-content-center{% endif %}">
                        {% for spec in list %}
                            <div class=" col-xs-2 col-md-3 col-sm-6">
                                <div class="card mb-4 box-shadow">
                                    <img src="{{ asset(spec.AvatarSmall) }}" class="img-fluid prohibit-changes-images">
                                    <div class="card-body">
                                        <p class="card-text text-center">
                                            <b>{{ spec.SpeakerFirstName }} {{ spec.SpeakerLastName}}</b>
                                            <br/>
                                            {{ spec.Organization }}
                                        </p>
                                    </div>
                                    <div class="text-center">
                                        <a class="btn btn-lg text-uppercase u-btn-green cs-font-weight-700 cs-font-size-11 cs-color-white cs-color-white--hover cs-bg-primary--hover cs-brd-none rounded-0 cs-px-20 cs-py-10 speaker_button_container" href="{{ path('speaker', {'id': spec.id}) }}" style="margin-bottom: 5px;">подробнее</a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    {% endif %}
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block stylesheets %}
{% endblock %}
