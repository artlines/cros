    {% set isChecked = true %}
    {% for type in roomTypes %}
        <label class="u-check d-block cs-mb-20">
            <input class="d-none cs-pos-abs cs-top-10 cs-right-10 cs-p-text-white--checked" name="plan_1" type="radio"{% if isChecked %} checked=""{% endif %}>
            <div class="media d-block d-md-flex u-shadow-v18 cs-bg-primary--checked">
                <div class="d-md-flex align-self-center cs-pa-30">
                    <div class="w-100">
                        <h3 class="cs-line-height-1 cs-font-weight-700 cs-font-size-23 cs-color-primary cs-color-white--checked mb-0">{{ type.cost }} <span>Руб.</span></h3>
                        <small class="cs-font-size-11 cs-theme-color-gray-dark-v1 cs-color-white--checked">за человека</small>
                    </div>
                </div>
                <div class="media-body cs-py-25 cs-px-30 cs-brd-top--dashed cs-brd-top-none--md cs-brd-left--dashed--md cs-border-gray">
                    <h4 class="h4 text-uppercase cs-font-weight-700 cs-font-size-14 cs-color-white--checked">{{ type.title }}</h4>
                    {{ type.description|raw }}
                </div>
            </div>
        </label>
        {% set isChecked = false %}
    {% endfor %}

