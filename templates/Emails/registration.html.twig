        <br><br>

        <table width="680px" style="width: 680px; font-size: 16px; font-family: arial;">
            <tbody>
            <tr>
                <td style="text-align: center;">
                    <img
                            src="{{ absolute_url(asset('temp/telegram-logo-56x56.png')) }}"
                            alt="Telegram" />
                </td>
