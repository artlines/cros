<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Lecture" table="lecture">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="date" type="date" column="date" nullable="false"/>
    <field name="startTime" type="time" column="start_time" nullable="false"/>
    <field name="endTime" type="time" column="end_time" nullable="false"/>
    <field name="hall" type="string" column="hall" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="speaker" type="string" column="speaker" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="company" type="string" column="company" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="moderator" type="string" column="moderator" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="title" type="string" column="title" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="theses" type="text" column="theses" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="hallId" type="integer" column="hall_id" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <many-to-many field="tgchat" target-entity="Tgchat" mapped-by="lecture" fetch="LAZY"/>
  </entity>
</doctrine-mapping>
