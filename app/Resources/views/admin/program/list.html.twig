{% extends 'admin.html.twig' %}
{% block body %}
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Программа {% if result %}<small class="bg-{{ result.status }}">{{ result.text }}</small>{% endif %}</h1>
            </div>
        </div>
        <a href="{{ url('admin-program-text') }}" class="btn btn-default">Редактировать дополнительный текст</a>
        <div class="row">
            <div class="col-lg-12">
                {% if programs is empty %}
                <h3>Нет программы {% if selectedconf.finish.date > 'now'|date('Y-m-d H:i:s') %}<a href="{{ path('admin-program-edit', {'id': 'new'}) }}"><button type="button" class="btn btn-default">Добавить</button></a>{% endif %}</h3>
            {% else %}
                    <table class="table">
                        <thead>
                        <tr>
                            <th>
                                Событие
                                <a href="{{ path('admin-program-edit', {'id': 'new'}) }}">
                                    <button type="button" class="btn btn-success"><i class="fa fa-plus fa-fw"></i></button>
                                </a>
                            </th>
                            <th>Дата <select id="date-selector"><option value="">Все</option>{% for date in days %}<option value="{{ date }}" {% if date == day %}selected="selected"{% endif %}>{{ date }}</option>{% endfor %}</select></th>
                            <th>Начало</th>
                            <th>Конец</th>
                            <th>Действия</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for program in programs %}
                            <tr>
                                <td><span>{{ program.title|raw }}</span></td>
                                <td>{{ program.date }}</td>
                                <td>{{ program.start|date('H:i') }}</td>
                                <td>{{ program.end|date('H:i') }}</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="{{ path('admin-program-edit', {'id': program.id }) }}" class="btn btn-default" role="button">
                                            <i class="fa fa-edit fa-fw"></i> Редактировать
                                        </a>
                                        <a href="{{ path('admin-program-remove', {'id': program.id}) }}" class="btn btn-danger remove-program" role="button">
                                            <i class="fa fa-remove fa-fw"></i> Удалить
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>
            <div id="editor"></div>
        </div>
    <div id="remove-confirm" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Подтвердите удаление</h4>
                </div>
                <div class="modal-body">
                    <p>Вы точно хотите удалить событие?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning btn-ok" data-dismiss="modal">Удалить</button>
                    <button type="button" class="btn btn-default btn-cancel" data-dismiss="modal">Отмена</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/admin.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/admin.js') }}"></script>
    <script>
        var linkforemove = false;
        $('.remove-program').on('click', function(e){
            e.preventDefault();
            linkforemove = $(this).attr('href');
            $('#remove-confirm').modal();
        });
        
        $('.btn-ok').on('click', function () {
            window.location = linkforemove;
        });

        $('.btn-cancel').on('click', function () {
            linkforemove = false;
        });
        
        $('#date-selector').on('change', function () {
            location.href = "{{ path('admin-program', {'year': year}) }}/" + $(this).val();
        });
    </script>
{% endblock %}