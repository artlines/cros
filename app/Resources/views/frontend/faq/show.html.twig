{% extends theme_template %}

{% block title %}Конференция Российских Операторов Связи{% endblock %}

{% block header_title %}Вопросы и ответы{% endblock %}
{% block body %}
    {% if append_text is not empty %}
        {{ append_text.text|raw }}
    {% endif %}
    {% if faq is empty %}
        <h3>Нет ответов</h3>
    {% else %}
        <div class="panel-group" id="accordion">
            {% set first = 1 %}
            {% for answer in faq %}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapse{{ answer.id }}">
                                <b>{{ answer.question|raw }}</b></a>
                        </h3>
                    </div>
                    <div id="collapse{{ answer.id }}" class="panel-collapse collapse{% if first == 1 %} in{% set first = 0 %}{% endif %}">
                        <div class="panel-body">{{ answer.answer|raw }}</div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}

{% block stylesheets %}
{% endblock %}
