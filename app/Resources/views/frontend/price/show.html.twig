{% extends theme_template %}

{% block title %}Конференция Российских Операторов Связи{% endblock %}

{% block header_title %}Стоимость участия{% endblock %}
{% block body %}
    {% if append_text is not empty %}
        <p>{{ append_text.text|raw }}</p>
    {% endif %}
    {% if prices is empty %}
        <h3>Нет данных</h3>
    {% else %}
        <div class="panel-group" id="accordion">
            {% set first = 1 %}
            {% for price in prices %}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapse{{ price.id }}">
                                <b>{{ price.title|raw }}</b></a>
                        </h3>
                    </div>
                    <div id="collapse{{ price.id }}" class="panel-collapse collapse {% if first == 1 %}in{% set first = 0 %}{% endif %}">
                        <div class="panel-body">
                            {{ price.description|raw }}
                            {#<p>Количестов мест: {{ price.places }}</p>#}
                            <p>Стоимость проживания на человека: {{ price.price }} р.</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}

{% block stylesheets %}
{% endblock %}
