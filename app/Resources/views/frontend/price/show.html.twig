{% extends theme_template %}

{% block title %}Конференция Российских Операторов Связи{% endblock %}

{% block header_title %}Стоимость участия{% endblock %}
{% block body %}
    <div class="row justify-content-center">
        <h2>Что входит в стоимость</h2>
    </div>

    {% if theme_template == 'base.html.twig' %}
        {% if append_text is not empty %}
            <p>{{ append_text.text|raw }}</p>
            <br/>
        {% endif %}
        {% if prices is empty %}
            <h3>Нет данных</h3>
        {% else %}

                {% set first = 1 %}
                {% for price in prices %}
                    <label class="u-check d-block cs-mb-20">
                        <input class="hidden-xs-up cs-pos-abs cs-top-10 cs-right-10 cs-p-text-white--checked" name="plan_1" type="radio"{% if first == 1 %} checked{% set first = 0 %}{% endif %}>
                        <div class="media d-block d-md-flex u-shadow-v18 cs-bg-primary--checked">
                            <div class="d-md-flex align-self-center cs-pa-30">
                                <div class="w-100">
                                    <h3 class="cs-line-height-1 cs-font-weight-700 cs-font-size-23 cs-color-primary cs-color-white--checked mb-0">{{ price.price }} <span>Руб.</span></h3>
                                    <small class="cs-font-size-11 cs-theme-color-gray-dark-v1 cs-color-white--checked">за человека</small>
                                </div>
                            </div>
                            <div class="media-body cs-py-25 cs-px-30 cs-brd-top--dashed cs-brd-top-none--md cs-brd-left--dashed--md cs-border-gray">
                                <h4 class="h4 text-uppercase cs-font-weight-700 cs-font-size-14 cs-color-white--checked">{{ price.title|raw }}</h4>
                                <p class="cs-font-size-14 cs-color-white--checked mb-0">{{ price.description|raw }}</p>
                            </div>
                        </div>
                    </label>
                {% endfor %}

        {% endif %}
    {% else %}
        {% if append_text is not empty %}
            <p>{{ append_text.text|raw }}</p>
        {% endif %}
        {% if prices is empty %}
            <h3>Нет данных</h3>
        {% else %}
            <div class="panel-group" id="accordion">
                {% set first = 1 %}
                {% for price in prices %}
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapse{{ price.id }}">
                                    <b>{{ price.title|raw }}</b></a>
                            </h3>
                        </div>
                        <div id="collapse{{ price.id }}" class="panel-collapse collapse {% if first == 1 %}in{% set first = 0 %}{% endif %}">
                            <div class="panel-body">
                                {{ price.description|raw }}
                                {#<p>Количестов мест: {{ price.places }}</p>#}
                                <p>Стоимость проживания на человека: {{ price.price }} р.</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    {% endif %}
{% endblock %}

{% block stylesheets %}
{% endblock %}
