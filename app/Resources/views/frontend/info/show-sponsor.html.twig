{% extends theme_template %}

{% block title %}Конференция Российских Операторов Связи{% endblock %}

{% block body %}

    {% if gold != null %}
        <section id="ourguests" class="cs-pt-30 cs-mb-100 cs-bg-img-layer-middle">
            <div class="container">
                <div class="text-center cs-mb-30">
                    <h2 class="text-uppercase cs-line-height-1 cs-font-weight-700 cs-font-size-23 cs-letter-spacing-0 cs-color-header">
                        Золотые спонсоры
                    </h2>
                </div>
                {% set uc = gold|length %}
                {% if uc > 3 %}
                <div class="row">
                    {% else %}
                    <div class="row justify-content-center">
                        {% endif %}
                        {% for sponsor in gold %}
                            <div class=" col-xs-2 col-md-4">
                                <div class="card mb-4 box-shadow">
                                    <img src="{{ asset('uploads/speakers/'~ sponsor.logoresize) }}" class="img-fluid">
                                    <div class="card-body">
                                        <p class="card-text text-center"><b>{{ sponsor.name }}</b></p>
                                    </div>
                                    <div class="text-center">
                                        <a class="btn btn-lg text-uppercase u-btn-green cs-font-weight-700 cs-font-size-11 cs-color-white cs-color-white--hover cs-bg-primary--hover cs-brd-none rounded-0 cs-px-20 speaker_button_container" href="#" style="margin-bottom: 5px;">подробнее</a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
        </section>
    {% endif %}

    {% if silvern != null %}
        <section id="ourguests" class="cs-pt-30 cs-mb-100 cs-bg-img-layer-middle">
            <div class="container">
                <div class="text-center cs-mb-30">
                    <h2 class="text-uppercase cs-line-height-1 cs-font-weight-700 cs-font-size-23 cs-letter-spacing-0 cs-color-header">
                        Cеребрянные спонсоры
                    </h2>
                </div>
                {% set uc = silvern|length %}
                {% if uc > 4 %}
                <div class="row">
                    {% else %}
                    <div class="row justify-content-center">
                        {% endif %}
                        {% for sponsor in silvern %}
                            <div class=" col-xs-2 col-md-3">
                                <div class="card mb-4 box-shadow">
                                    <img src="{{ asset('uploads/speakers/'~ sponsor.logoresize) }}" class="img-fluid">
                                    <div class="card-body">
                                        <p class="card-text text-center"><b>{{ sponsor.name }}</b></p>
                                    </div>
                                    <div class="text-center">
                                        <a class="btn btn-lg text-uppercase u-btn-green cs-font-weight-700 cs-font-size-11 cs-color-white cs-color-white--hover cs-bg-primary--hover cs-brd-none rounded-0 cs-px-20 speaker_button_container" href="#" style="margin-bottom: 5px;">подробнее</a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
        </section>
    {% endif %}

{% endblock %}


{% block stylesheets %}
<style>
.img-show-link img {
	width: 175px;
}
</style>
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('assets/js/lightbox.min.js') }}"></script>
{% endblock %}

