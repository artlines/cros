
{% if mainPage %}
	{% set cd_digit_container_style = 'd-inline-block cs-font-size-12 cs-brd-left cs-px-10 cs-px-60--md cs-py-15' %}
    {% set cd_digit_style = 'cs-font-size-20 cs-font-size-40--md cs-font-weight-700 cs-line-height-1 cs-mb-5' %}
{% else %}
    {% set cd_digit_container_style = 'd-inline-block cs-font-size-12 cs-brd-left cs-px-10 cs-px-10--md cs-py-15' %}
    {% set cd_digit_style = 'cs-font-size-15 cs-font-size-20--md cs-font-weight-300 cs-line-height-1 cs-mb-5' %}
{% endif %}

{% if text %}
	<div style="text-align: center;text-transform: uppercase;" class="{% if mainPage %}cs-font-size-23{% else %}cs-font-size-18{% endif %}">{{ text }}</div>
{% endif %}
<!-- Countdown v4 -->
{% if countdown_date %}
	<div class="js-countdown {% if mainPage %} text-center text-uppercase{% else %} text-right{% endif %}u-countdown-v4"
		 data-end-date="{{ countdown_date|date("Y/m/d H:i:s") }}"
		 data-month-format="%m"
		 data-days-format="%D"
		 data-hours-format="%H"
		 data-minutes-format="%M"
		 data-seconds-format="%S">
		<div class="{{ cd_digit_container_style }}">
			<div class="js-cd-days {{ cd_digit_style }}">0</div>
			<span>Дней</span>
		</div>
		<div class="{{ cd_digit_container_style }}">
			<div class="js-cd-hours {{ cd_digit_style }}">0</div>
			<span>Часов</span>
		</div>
		<div class="{{ cd_digit_container_style }}">
			<div class="js-cd-minutes {{ cd_digit_style }}">0</div>
			<span>Минут</span>
		</div>
		<div class="{{ cd_digit_container_style }}">
			<div class="js-cd-seconds {{ cd_digit_style }}">0</div>
			<span>Секунд</span>
		</div>
	</div>
{% endif %}
<!-- End Countdown v4 -->